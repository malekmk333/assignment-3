<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>My Assignments</h2>
  <a href="/assignments/new" class="btn btn-success">Add Assignment</a>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th>Due Date</th>
      <th>Status</th>
      <th style="width: 180px;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% assignments.forEach(a => { %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.course %></td>
        <td><%= a.dueDate.toDateString() %></td>
        <td><%= a.status %></td>

        <td>
          <a href="/assignments/<%= a._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <a href="/assignments/<%= a._id %>/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
